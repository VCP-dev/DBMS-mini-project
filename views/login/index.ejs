<div class="page" style="background-color: rgba(1,109,135,1);margin-top: 5em;">
    
    <div class="form-data">
    <form action="/" method="POST" class="form-data-entry">
      <div class="container">
        <div>Librarian log in</div>
      </div>  
      <div class="container">         
       <div style="margin-top: 1em;">
           <label>Username :</label>
           <input type="text" name="librarian_username" size="15" maxlength="16">
       </div>
       <div style="margin-top: 1.4em;">
           <label>Password :</label>
           <input type="password" name="librarian_password" size="15" maxlength="16">
       </div>     
       <button type="submit" style="margin-top: 1.6em;">Login</button>   
      </div> 
    </form>    
    </div>    

    <div class="form-data" style="margin-top:1em;">
        <br>
        <% if(locals.errorMessage != null) { %>
            <div class="form-data-entry, container" style="color: red;"><%= errorMessage %></div>
        <% } %>               
    </div>
</div>